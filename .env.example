# Deutsche Bahn MCP Server Environment Configuration
# Copy this file to .env and fill in your actual values

# Deutsche Bahn API Credentials
# Get these from: https://developers.deutschebahn.com
DB_API_KEY="your_deutsche_bahn_client_id_here"
DB_API_SECRET="your_deutsche_bahn_api_key_here"

# Google Cloud Configuration (for deployment only)
GCP_PROJECT_ID="your_google_cloud_project_id"

# Security Configuration (for production deployment)
# Custom domain for your MCP server (required if using custom domain)
CUSTOM_DOMAIN="your-domain.com"
# Cloud Run backend URL - auto-detected, only override if needed
# CLOUD_RUN_URL=https://your-service-name-123456789.region.run.app

# Optional: Custom configuration
# LOG_LEVEL=INFO
# PORT=8080
